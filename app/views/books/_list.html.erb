

<script src="https://kit.fontawesome.com/3e77649537.js" crossorigin="anonymous"></script>

<div class="container px-5 px-am-0">
  <div class="row">
    <div class="cok-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
	          <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
	          <th>introduction</th>
	          <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
        <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-sm btn-block mb-3 sign_in' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
        <h2 class="mt-3">New Book</h2>
        <%= form_with model: book do |f| %>
          <label for="book_title">Title</label></br>
          <%= f.text_field :title %></br>
          <label for="book_opinion">Opinion</label></br>
          <%= f.text_area :body %></br>
          <div class="form-group">
          <%= f.submit 'Create Book', class: 'btn btn-success' %>
          </div>
        <% end %>
    </div>
  </div>
</div>

